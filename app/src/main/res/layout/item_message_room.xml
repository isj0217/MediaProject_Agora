<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink_light_semi_transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="22dp"
        android:paddingTop="15dp"
        android:paddingEnd="22dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_item_message_room_user_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상대방 닉네임" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_item_message_room_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제일 최근에 주고받은 시간"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_message_room_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제일 최근 메시지 내용"
                android:maxLength="25"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/dark_grey"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_item_message_room_idx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="쪽지방 idx"
                    android:textColor="@color/light_grey"
                    android:textSize="12sp" />

                <View
                    android:visibility="gone"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/lighter_grey" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_item_message_room_user_idx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="상대방 user_index"
                    android:textColor="@color/light_grey"
                    android:textSize="12sp" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_item_message_room_message_idx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가장 최근 메시지 내용 idx" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/light_grey" />

</LinearLayout>